public class NewApplicationStep {
    private final NewApplicationAsserts newApplicationAsserts = new NewApplicationAsserts();
    private final MainPage mainPage = new MainPage();
    private final NewApplicationPage newApplicationPage = new NewApplicationPage();
    private final MainInfoGenerator mainInfoGenerator = new MainInfoGenerator();

@Step("Корректное заполнение полей новой заявки на странице \"Создание заявки\"")
    public void correctFulfillNewApplication() {
        mainPage.pressNewApplicationButton();
        newApplicationPage.fulfillSurname();
        newApplicationPage.fulfillName();
        newApplicationPage.fulfillPatronymic();
        newApplicationPage.fulfillBirthday();
        newApplicationPage.fulfillPassport();
    }
