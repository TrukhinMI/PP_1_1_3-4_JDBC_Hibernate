public class GeneralInformationStep {

    private final GeneralInfoAsserts generalInfoAsserts = new GeneralInfoAsserts();
    private final GeneralInformationPage generalInformationPage = new GeneralInformationPage();
    private final MainInfoGenerator mainInfoGenerator = new MainInfoGenerator();

    @Step("Корректное заполнение полей странице на странице \"Общие сведения\"")
    public void correctFulfillGeneralInformation() {
        generalInformationPage.chooseMaleGender();
        generalInformationPage.fulfillPhoneNumber();
        generalInformationPage.fulfillIssueDate();
        generalInformationPage.fulfillDepartmentCode();
        generalInformationPage.fulfillDepartment();
        generalInformationPage.fulfillCountry();
        generalInformationPage.fulfillBirthPlace();
        generalInformationPage.fulfillDealership();
        generalInformationPage.sendDocument();
    }


    @Step("Проверка корректности заполнения полей на странице \"Общие сведения\"")
    public void checkIfGeneralInformationCorrect() {
        generalInfoAsserts.checkMainPassportInfo(mainInfoGenerator.name,
                mainInfoGenerator.surname,
                mainInfoGenerator.patronymic,
                mainInfoGenerator.birthDate,
                mainInfoGenerator.passport);
        generalInfoAsserts.checkPhoneNumber(mainInfoGenerator.phoneNumber);
        generalInfoAsserts.checkIssueDate(mainInfoGenerator.issueDate);
        generalInfoAsserts.checkDepartmentCode(mainInfoGenerator.departmentCode);
        generalInfoAsserts.checkDepartment(generalInfoAsserts.department);
        generalInfoAsserts.checkCountry(generalInfoAsserts.country);
        generalInfoAsserts.checkBirthPlace(generalInfoAsserts.birthPlace);
        generalInfoAsserts.checkDealership(generalInfoAsserts.dealership);
        generalInfoAsserts.checkFileIsUploaded();
    }

}
