public class MainPage {
    private final SelenideElement username = $(byXpath("//span[contains(text(), 'Автотест Автотестовый')]"));
    private final SelenideElement exitButton = $(byXpath("//button[@name='logout']"));
    private final SelenideElement newApplicationButton = $(byXpath("//button[@name='new-application']"));
    private final SelenideElement backButton = $(byXpath("//button[@name='back']"));
    private final SelenideElement nextButton = $(byXpath("//button[@name='proceed']"));
    private final SelenideElement findButton = $(byXpath("//button[@name='search-application']"));

    @Step("Нажатие кнопки \"Найти\"")
    public void pressFindButton() {
        findButton.click();
    }

    @Step("Выход из учётной записи")
    public void exitAccount() {
        exitButton.click();
    }

    @Step("Нажатие кнопки \"Новая заявка\"")
    public void pressNewApplicationButton() {
        newApplicationButton.click();
    }

    @Step("Нажатие кнопки Назад")
    public void pressBackButton() {
        backButton.click();
    }

    @Step("Нажатие кнопки Далее")
    public void pressNextButton() {
        nextButton.click();
    }

    public String getUsernameText() {
        return username.getText();
    }

    @Step("Проверка отображения кнопки \"Найти\"")
    public boolean isFindButtonDisplayed() {
        return findButton.isDisplayed();
    }
}
